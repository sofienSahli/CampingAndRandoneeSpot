            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cropToPadding="true"
            android:padding="4dp"
            android:src="@android:drawable/ic_input_add"
            app:fab_label="Marche libre"
            app:fab_size="mini" />
    </com.github.clans.fab.FloatingActionMenu>

